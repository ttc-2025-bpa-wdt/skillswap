---
import Layout from "@layouts/global.astro";
import SessionCard from "@components/cards/SessionCard.astro";
import UserCard from "@components/cards/UserCard.astro";
import Pagination from "@components/base/Pagination.astro";

import { Profile, Session } from "shared/models";

export const prerender = false;

const query = Astro.url.searchParams.get("q")?.trim();

const profiles = query ? await Profile.search(query) : [];
const sessions = query ? await Session.search(query) : [];

let foundLabel = "Found ";

if (sessions.length) foundLabel += `${sessions.length} sessions`;

if (sessions.length && profiles.length) foundLabel += " and ";

if (profiles.length) foundLabel += `${profiles.length} users`;

if (!sessions.length && !profiles.length) foundLabel = "No results found";

const title = query ? `Search Results for "${query}"` : "Search Results";
---

<Layout title={title}>
    <div class="search-container">
        <header class="search-header">
            <div class="header-content">
                <h1>{title}</h1>
                <p>{foundLabel} matching your query.</p>
            </div>
        </header>

        <div class="results-grid">
            {
                sessions?.length ? (
                    <section class="results-section">
                        <div class="results-header">
                            <h2>Skills</h2>
                            <Pagination />
                        </div>
                        <div class="results-list">
                            {sessions.map((session) => (
                                <SessionCard payload={session} />
                            ))}
                        </div>
                    </section>
                ) : null
            }

            {
                profiles?.length ? (
                    <section class="results-section">
                        <div class="results-header">
                            <h2>Users</h2>
                            <Pagination />
                        </div>
                        <div class="results-list">
                            {profiles.map((user) => (
                                <UserCard payload={user} />
                            ))}
                        </div>
                    </section>
                ) : null
            }
        </div>
    </div>
</Layout>

<style lang="scss">
    .search-container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 2rem;

        @media (max-width: 600px) {
            padding: 1rem;
        }
    }

    .search-header {
        margin-bottom: 3rem;
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        gap: 2rem;
        flex-wrap: wrap;

        @media (max-width: 600px) {
            margin-bottom: 1.5rem;
        }

        h1 {
            font-family: "Montserrat", sans-serif;
            font-size: 2rem;
            color: var(--foreground);
            margin-bottom: 0.5rem;

            @media (max-width: 600px) {
                font-size: 1.75rem;
            }
        }

        p {
            color: var(--foreground);
            opacity: 0.7;
            font-size: 1.1rem;
        }
    }

    .results-grid {
        display: flex;
        flex-direction: column;
        gap: 3rem;
    }

    .results-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        flex-wrap: wrap;
        gap: 1rem;

        @media (max-width: 600px) {
            flex-direction: column;
            align-items: stretch;
        }
    }

    .results-section {
        display: flex;
        flex-direction: column;

        h2 {
            flex: 1;
            font-family: "Montserrat", sans-serif;
            font-size: 1.5rem;
            color: var(--foreground);
        }
    }

    .results-list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .empty {
        font-style: italic;
        opacity: 0.6;
    }
</style>
