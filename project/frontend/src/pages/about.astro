---
import { DataCache } from "shared/helpers";
import { Profile, ProfileFilter, User, UserFilter } from "shared/models";

import Layout from "@layouts/global.astro";
import Button from "@components/base/Button.svelte";
import Card from "@components/base/Card.svelte";

const team = [
    {
        profile: await DataCache.read({ key: "profile:nicholas.h", ttl: 60000 }, () =>
            Profile.read("nicholas.h", ProfileFilter.Handle),
        ),
        user: await DataCache.read({ key: "user:nicholas.h", ttl: 60000 }, () =>
            User.read("nicholas.h", UserFilter.Handle),
        ),
        role: "Development Lead/DevOps Architect",
        desc: "Leading the development of SkillSwap's platform",
        email: "nicholas@skillswap.bpariverside.org",
    },
    {
        profile: await DataCache.read({ key: "profile:zachary.v", ttl: 60000 }, () =>
            Profile.read("zachary.v", ProfileFilter.Handle),
        ),
        user: await DataCache.read({ key: "user:zachary.v", ttl: 60000 }, () =>
            User.read("zachary.v", UserFilter.Handle),
        ),
        role: "Project Manager and UI/UX Designer",
        desc: "Crafting the experience and interface of SkillSwap",
        email: "zvp@skillswap.bpariverside.org",
    },
    {
        profile: await DataCache.read({ key: "profile:nicholas.g", ttl: 60000 }, () =>
            Profile.read("nicholas.g", ProfileFilter.Handle),
        ),
        user: await DataCache.read({ key: "user:nicholas.g", ttl: 60000 }, () =>
            User.read("nicholas.g", UserFilter.Handle),
        ),
        role: "Community Engagement Expert",
        desc: "Making sure SkillSwap stays fun and engaging",
        email: "nickg@skillswap.bpariverside.org",
    },
    {
        profile: await DataCache.read({ key: "profile:kyle.j", ttl: 60000 }, () =>
            Profile.read("kyle.j", ProfileFilter.Handle),
        ),
        user: await DataCache.read({ key: "user:kyle.j", ttl: 60000 }, () => User.read("kyle.j", UserFilter.Handle)),
        role: "Marketing/Social Coordinator",
        desc: "Promoting SkillSwap and connecting community",
        email: "kyle@skillswap.bpariverside.org",
    },
];

const competitionMetadata = {
    title: "(V04) Web Application Team",
    chapter: "Tulsa Technology Center - Riverside Campus",
    members: team.map((member) => {
        const name = member.profile.displayName;
        return member.user.handle == "nicholas.h" ? `${name} (Captain)` : name;
    }),
    theme: "Personalized Learning and Skill Development",
    school: "Tulsa Technology Center - IT System Administration, Cyber Security/Forensics",
    city: "Tulsa",
    state: "Oklahoma",
    year: new Date().getFullYear(),
    repo: "https://github.com/ttc-2025-bpa-wdt/skillswap",
    project: "https://trello.com/b/skill-swap", // todo: impl
};
---

<Layout title="About Us" desc="Learn about our vision and the team behind SkillSwap.">
    <section class="about-hero">
        <div class="content">
            <h1 class="gradient-text">Our Vision</h1>
            <p class="vision-text">
                At SkillSwap, we believe that everyone has something to teach and something to learn. Our mission is to
                democratize education by connecting students and mentors directly, fostering a community where knowledge
                flows freely and skills are exchanged with passion. We envision a world where learning is accessible,
                collaborative, and fun.
            </p>
        </div>
    </section>

    <section class="section-container team-section">
        <h2 class="section-title">Meet the Team</h2>
        <div class="team-grid">
            {
                team.map((member) => (
                    <Card class="team-card">
                        <img src={member.profile.avatarUrl} alt={member.profile.displayName} class="avatar" />
                        <h3>
                            {member.profile.displayName.split(" ")[0] /* todo: lol this is hacky */}
                            <br />
                            {member.profile.displayName.split(" ")[1]}
                        </h3>
                        <span class="role">{member.role}</span>
                        <p>{member.desc}</p>
                        <Button
                            variant="outline"
                            class="btn-contact"
                            data-email={member.email}
                            href={`mailto:${member.email}`}
                        >
                            Email
                        </Button>
                    </Card>
                ))
            }
        </div>
    </section>

    <section class="section-container competition-section bg-alt">
        <h2 class="section-title">Competition Details</h2>
        <Card class="competition-card">
            <div class="card-header">
                <h3>{competitionMetadata.title}</h3>
            </div>

            <div class="divider"></div>

            <div class="card-body">
                <div class="info-group">
                    <span class="label">Chapter / School / Class</span>
                    <span class="chapter">{competitionMetadata.chapter}</span>
                    <span class="school">{competitionMetadata.school}</span>
                </div>

                <div class="info-group">
                    <span class="label">Theme</span>
                    <span class="value highlight">{competitionMetadata.theme}</span>
                </div>

                <div class="info-row">
                    <div class="info-group">
                        <span class="label">Location</span>
                        <span class="value">{competitionMetadata.city}, {competitionMetadata.state}</span>
                    </div>
                    <div class="info-group">
                        <span class="label">Year</span>
                        <span class="value">{competitionMetadata.year}</span>
                    </div>
                </div>

                <div class="info-group">
                    <span class="label">Team Members</span>
                    <div class="member-chips">
                        {competitionMetadata.members.map((member) => <span class="chip">{member}</span>)}
                    </div>
                </div>

                <Button variant="primary" href={competitionMetadata.repo} target="_blank">GitHub Repo</Button>
            </div>
        </Card>
    </section>

    <section id="contact" class="section-container contact-section">
        <h2 class="section-title">Get in Touch</h2>
        <Card class="contact-card">
            <div class="contact-info">
                <h3>Contact Us</h3>
                <p>Have questions or feedback? We'd love to hear from you.</p>

                <div class="info-item">
                    <span class="icon">üìß</span>
                    <a href="mailto:support@skillswap.bpariverside.org">support@skillswap.bpariverside.org</a>
                </div>
                <div class="info-item">
                    <span class="icon">üìç</span>
                    <span>801 East 91st Street, Tulsa, OK 74132-4008</span>
                    <div class="tooltip" tabindex="0" aria-label="Address information">
                        <span class="tooltip-icon">‚ÑπÔ∏è</span>
                        <span class="tooltip-text"
                            >This is the address of our campus. This is not an office for SkillSwap and should not be
                            used for mailing or in-person visits. This is purely for informational purposes laid out in
                            the competition guidelines.</span
                        >
                    </div>
                </div>
            </div>

            <form id="contact-form" class="contact-form">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" id="name" name="name" placeholder="Your Name" required />
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" placeholder="Your Email" required />
                </div>
                <div class="form-group">
                    <label for="message">Message</label>
                    <textarea id="message" name="message" rows="4" placeholder="How can we help?" required></textarea>
                </div>
                <Button type="submit" variant="primary" block>Send Message</Button>
            </form>
        </Card>
    </section>
</Layout>

<script>
    import { showAlert } from "@lib/ui";
    const contactForm = document.getElementById("contact-form") as HTMLFormElement;
    contactForm?.addEventListener("submit", async (e) => {
        e.preventDefault();
        
        const btn = contactForm.querySelector('button[type="submit"]');
        let originalText = "";
        if (btn) {
            originalText = btn.textContent || "Send Message";
            btn.textContent = "Sending...";
            (btn as HTMLButtonElement).disabled = true;
        }

        const formData = new FormData(contactForm);

        try {
            const res = await fetch("/api/v1/feedback", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({
                    name: formData.get("name"),
                    email: formData.get("email"),
                    message: formData.get("message")
                })
            });

            const result = await res.json();
            if (result.success) {
                await showAlert("Message sent successfully!", "Success");
                contactForm.reset();
            } else {
                await showAlert(result.error || "Failed to send message", "Error");
            }
        } catch (err) {
            console.error(err);
            await showAlert("Error sending message", "Error");
        } finally {
            if (btn) {
                btn.textContent = originalText;
                (btn as HTMLButtonElement).disabled = false;
            }
        }
    });
</script>

<style lang="scss">
    .about-hero {
        padding: 6rem 2rem;
        text-align: center;
        background: linear-gradient(135deg, rgba(44, 116, 196, 0.1) 0%, rgba(42, 157, 143, 0.1) 100%);

        @media (max-width: 768px) {
            padding: 4rem 1.5rem;
        }

        .content {
            max-width: 800px;
            margin: 0 auto;
        }

        h1 {
            font-family: "Montserrat", sans-serif;
            font-size: 3rem;
            margin-bottom: 1.5rem;

            @media (max-width: 768px) {
                font-size: 2.25rem;
            }
        }

        .vision-text {
            font-size: 1.25rem;
            line-height: 1.8;
            color: var(--foreground);
            opacity: 0.9;

            @media (max-width: 768px) {
                font-size: 1.1rem;
            }
        }
    }

    .section-container {
        padding: 4rem 2rem;

        @media (max-width: 768px) {
            padding: 3rem 1.5rem;
        }
    }

    .section-title {
        text-align: center;
        font-family: "Montserrat", sans-serif;
        font-size: 2.5rem;
        margin-bottom: 3rem;
        color: var(--foreground);

        @media (max-width: 768px) {
            font-size: 2rem;
            margin-bottom: 2rem;
        }
    }

    .bg-alt {
        background-color: rgba(0, 0, 0, 0.02);
    }

    /* Competition Section */
    .competition-card {
        max-width: 700px;
        margin: 0 auto;
        padding: 0;
    }

    .card-header {
        padding: 2rem 2rem 1.5rem;
        text-align: center;

        h3 {
            font-family: "Montserrat", sans-serif;
            font-size: 1.4rem;
            margin: 0 0 0.5rem 0;
            color: var(--foreground);
        }

        .school {
            font-size: 1rem;
            color: var(--text-muted);
        }
    }

    .divider {
        height: 1px;
        background: linear-gradient(90deg, transparent, var(--accent-3), transparent);
        opacity: 0.5;
        width: 80%;
        margin: 0 auto;
    }

    .card-body {
        padding: 2rem;
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .info-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;

        .chapter {
            font-size: 1.25rem;
            color: #bc2035;
        }

        .school {
            color: color-mix(in srgb, #bc2035, var(--text-muted) 80%);
            font-size: 1rem;
            font-weight: 500;
        }

        .label {
            text-transform: uppercase;
            font-size: 0.75rem;
            font-weight: 700;
            letter-spacing: 1px;
            color: var(--accent-1);
        }

        .value {
            font-size: 1.1rem;
            color: var(--foreground);

            &.highlight {
                font-size: 1.25rem;
                font-weight: 500;
                line-height: 1.4;
            }
        }
    }

    .info-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2rem;

        @media (max-width: 600px) {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }
    }

    .member-chips {
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;

        .chip {
            background-color: var(--background);
            border: 1px solid var(--accent-3);
            padding: 0.5rem 1rem;
            border-radius: 50px;
            font-size: 0.9rem;
            cursor: default;
            transition: all 0.2s;

            &:hover {
                border-color: var(--accent-1);
                color: var(--accent-1);
                transform: translateY(-2px);
            }
        }
    }

    /* Team Section */
    .team-grid {
        display: grid;
        /* Reduced min-width to 220px to allow 4 items to fit on a row in a 1200px container */
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 2rem;
        padding: 0 1rem;

        @media (max-width: 600px) {
            grid-template-columns: 1fr;
            padding: 0;
            gap: 1.5rem;
        }
    }

    .team-card {
        text-align: center;
        transition:
            transform 0.3s ease,
            box-shadow 0.3s ease;
        display: flex;
        flex-direction: column;
        height: 100%;

        &:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            border-color: var(--accent-1);
        }

        .avatar {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            object-fit: cover;
            background-color: var(--accent-3);
            margin: 0 auto 1.5rem;

            /* &.placeholder {
                background: linear-gradient(45deg, var(--accent-1), var(--accent-2));
                opacity: 0.8;
            } */
        }

        h3 {
            font-family: "Montserrat", sans-serif;
            font-size: 1.25rem;
            margin-bottom: 0.5rem;
            color: var(--foreground);
        }

        .role {
            display: block;
            font-size: 0.9rem;
            color: var(--accent-1);
            font-weight: 600;
            margin-bottom: 1rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        p {
            font-size: 0.95rem;
            opacity: 0.8;
            margin-bottom: 1.5rem;
            flex-grow: 1;
        }
    }

    .contact-card {
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        gap: 2rem;
        padding: 3rem;
        box-sizing: border-box;

        @media (max-width: 768px) {
            padding: 2rem;
        }

        @media (max-width: 600px) {
            padding: 1.5rem;
        }
    }

    .contact-info {
        text-align: center;

        h3 {
            font-family: "Montserrat", sans-serif;
            font-size: 1.5rem;
            margin-bottom: 1rem;
        }

        p {
            margin-bottom: 2rem;
            opacity: 0.8;
        }

        .info-item {
            display: flex;
            align-items: center; 
            justify-content: center;
            margin-bottom: 1rem;
            font-size: 1rem;

            .icon {
                margin-right: 1rem;
                font-size: 1.2rem;
                flex-shrink: 0; /* Prevent icon from squishing */
                margin-top: 0.2rem; /* Visual alignment with text */
            }

            .tooltip {
                position: relative;
                display: inline-flex;
                margin-left: 0.5rem;
                cursor: help;

                &:focus {
                    outline: none;
                }

                .tooltip-icon {
                    font-size: 1rem;
                    opacity: 0.7;
                    transition: opacity 0.2s;
                }

                &:hover .tooltip-icon,
                &:focus .tooltip-icon {
                    opacity: 1;
                }

                .tooltip-text {
                    visibility: hidden;
                    background-color: var(--foreground);
                    color: var(--background);
                    text-align: center;
                    border-radius: 6px;
                    padding: 8px 12px;
                    position: absolute;
                    z-index: 100;
                    bottom: 140%;
                    left: 50%;
                    transform: translateX(-50%);
                    opacity: 0;
                    transition:
                        opacity 0.2s,
                        visibility 0.2s;
                    font-size: 0.8rem;
                    white-space: normal;
                    line-height: 1.4;
                    pointer-events: none;
                    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
                    width: max-content;
                    max-width: 300px;

                    &::after {
                        content: "";
                        position: absolute;
                        top: 100%;
                        left: 50%;
                        margin-left: -5px;
                        border-width: 5px;
                        border-style: solid;
                        border-color: var(--foreground) transparent transparent transparent;
                    }

                    @media (max-width: 600px) {
                        max-width: 200px;
                        /* Shift slightly left on mobile to avoid overflow since icon is on the right */
                        left: auto;
                        right: -10px;
                        transform: none;

                        &::after {
                            left: auto;
                            right: 14px;
                        }
                    }
                }

                &:hover .tooltip-text,
                &:focus .tooltip-text,
                &:focus-within .tooltip-text {
                    visibility: visible;
                    opacity: 1;
                }
            }

            a {
                color: var(--accent-1);
                text-decoration: none;
                &:hover {
                    text-decoration: underline;
                }
            }
        }
    }

    .contact-form {

        .form-group {
            margin-bottom: 1.5rem;

            label {
                display: block;
                font-weight: 600;
                margin-bottom: 0.5rem;
                font-size: 0.9rem;
            }

            input,
            textarea {
                width: 100%;
                padding: 0.75rem;
                border: 1px solid var(--accent-3);
                border-radius: 8px;
                background: var(--background);
                color: var(--foreground);
                font-family: "Roboto", sans-serif;
                box-sizing: border-box; // Ensure padding doesn't break layout

                &:focus {
                    outline: none;
                    border-color: var(--accent-1);
                }
            }
        }
    }

    .gradient-text {
        background: linear-gradient(45deg, var(--accent-1), var(--accent-2));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
</style>
