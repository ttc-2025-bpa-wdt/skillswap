---
import Layout from "@layouts/global.astro";
import Button from "@components/base/Button.svelte";
import Card from "@components/base/Card.svelte";

const categories = ["Programming", "Music", "Language", "Art", "Cooking", "Gardening", "Marketing", "Other"];
---

<Layout title="Create Session" desc="Create a new skill swap session">
    <div class="create-container">
        <header class="page-header">
            <h1>Create New Session</h1>
            <p>Share your skills with the community. Fill in the details below to schedule a session.</p>
        </header>

        <Card class="create-card">
            <form id="create-session-form">
                <!-- Basic Info -->
                <div class="form-section">
                    <h2>Session Details</h2>

                    <div class="form-group">
                        <label for="title">Session Title</label>
                        <input
                            type="text"
                            id="title"
                            name="title"
                            placeholder="e.g., Intro to Python Programming"
                            required
                        />
                    </div>

                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea
                            id="description"
                            name="description"
                            rows="4"
                            placeholder="What will be covered in this session?"
                            required></textarea>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="category">Category</label>
                            <input
                                type="text"
                                id="category"
                                name="category"
                                placeholder="i.e. Programming"
                                required
                                pattern="[A-Z][a-z0-9]*"
                                title="Please enter a single word starting with an uppercase letter (e.g. Programming)"
                            />
                        </div>

                        <div class="form-group">
                            <label for="difficulty">Difficulty Level</label>
                            <select id="difficulty" name="difficulty" required>
                                <option value="" disabled selected>Select difficulty</option>
                                <option value="beginner">Beginner</option>
                                <option value="intermediate">Intermediate</option>
                                <option value="advanced">Advanced</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="prerequisites">Prerequisites (Optional)</label>
                        <input
                            type="text"
                            id="prerequisites"
                            name="prerequisites"
                            placeholder="e.g., Basic knowledge of HTML, Guitar ownership"
                        />
                    </div>
                </div>

                <div class="divider"></div>

                <!-- Schedule & Location -->
                <div class="form-section">
                    <h2>Schedule & Location</h2>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="date-time">Date & Time</label>
                            <input type="datetime-local" id="date-time" name="date-time" required />
                        </div>

                        <div class="form-group">
                            <label for="duration">Duration (minutes)</label>
                            <select id="duration" name="duration">
                                <option value="30">30 mins</option>
                                <option value="45">45 mins</option>
                                <option value="60" selected>60 mins</option>
                                <option value="90">90 mins</option>
                                <option value="120">2 hours</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="zoom-link">Zoom Link / Meeting URL</label>
                        <input
                            type="url"
                            id="zoom-link"
                            name="zoom-link"
                            placeholder="https://zoom.us/j/..."
                            required
                        />
                        <p class="helper-text">Please provide a valid meeting link for attendees.</p>
                    </div>
                </div>

                <div class="form-actions">
                    <Button variant="outline" href="/dashboard">Cancel</Button>
                    <Button type="submit">Create Session</Button>
                </div>
            </form>
        </Card>
    </div>
</Layout>

<style lang="scss">
    .create-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem 1rem 4rem;
    }

    .page-header {
        margin-bottom: 2rem;

        h1 {
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }

        p {
            opacity: 0.7;
            font-size: 1.1rem;
        }
    }

    .create-card {
        padding: 2.5rem;
        background: var(--card-bg); /* Explicit fallback if Card doesn't handle it, though it should */

        @media (max-width: 600px) {
            padding: 1.5rem;
        }
    }

    .form-section {
        h2 {
            font-size: 1.25rem;
            margin-bottom: 1.5rem;
            color: var(--accent-1);
        }
    }

    .divider {
        height: 1px;
        background: var(--accent-3);
        margin: 2rem 0;
        opacity: 0.5;
    }

    .form-group {
        margin-bottom: 1.5rem;

        label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 500;
            font-size: 0.95rem;
        }

        input,
        textarea,
        select {
            width: 100%;
            padding: 0.75rem 1rem;
            border-radius: 8px;
            /* Note: global theme usually handles border/bg, but ensuring consistency here */
        }

        .helper-text {
            font-size: 0.85rem;
            margin-top: 0.5rem;
            opacity: 0.7;
        }

        select {
            /* Fix for select text color not picking up foreground in some browsers/OS */
            color: var(--foreground);
            background-color: var(--background);
        }
    }

    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.5rem;

        @media (max-width: 600px) {
            grid-template-columns: 1fr;
            gap: 0;
        }
    }

    .form-actions {
        margin-top: 2rem;
        display: flex;
        justify-content: flex-end;
        gap: 1rem;
    }
</style>

<script>
    import { showAlert } from "@lib/ui";
    const form = document.getElementById("create-session-form") as HTMLFormElement;

    // Set default datetime to tomorrow at this time
    const dateInput = document.getElementById("date-time") as HTMLInputElement;
    if (dateInput) {
        const now = new Date();
        now.setDate(now.getDate() + 1);
        now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
        dateInput.value = now.toISOString().slice(0, 16);
    }

    form?.addEventListener("submit", async (e) => {
        e.preventDefault();
        
        const btn = form.querySelector('button[type="submit"]');
        let originalText = "";
        if (btn) {
            originalText = btn.textContent || "Create Session";
            btn.textContent = "Creating...";
            (btn as HTMLButtonElement).disabled = true;
        }

        const formData = new FormData(form);

        try {
            const res = await fetch("/api/v1/session", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({
                    name: formData.get("title"),
                    description: formData.get("description"),
                    categories: [formData.get("category")],
                    prereqs: formData.get("prerequisites"),
                    difficulty: formData.get("difficulty"),
                    eventDate: formData.get("date-time"),
                    duration: formData.get("duration"),
                    meetingUrl: formData.get("zoom-link")
                })
            });

            const result = await res.json();
            if (result.success && result.data?.id) {
                await showAlert("Session created successfully!", "Success");
                window.location.href = `/session/${result.data.id}`;
            } else {
                await showAlert(result.error || "Failed to create session", "Error");
                if (btn) {
                    btn.textContent = originalText;
                    (btn as HTMLButtonElement).disabled = false;
                }
            }
        } catch (err) {
            console.error(err);
            await showAlert("Error creating session", "Error");
            if (btn) {
                btn.textContent = originalText;
                (btn as HTMLButtonElement).disabled = false;
            }
        }
    });
</script>
