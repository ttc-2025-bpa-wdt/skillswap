<Layout title="Dashboard">
    <div class="dashboard-container">
        <header class="welcome-header">
            <h1>Welcome back!</h1>
            <p>Here's what's happening in your learning journey.</p>
        </header>

        <section class="teacher-dashboard">
            <Card class="dashboard-card full-width">
                <div class="card-header">
                    <h2>Your Sessions</h2>
                    <Button size="sm" href="/session/create">
                        Create New Session
                    </Button>
                </div>
                <div class="teaching-list">
                    {mySessions.map((session) => (
                        <div class="session-item-detailed">
                            <div class="session-main">
                                <div class="session-header">
                                    <h3>{session.title}</h3>
                                    <span class={`status-badge ${session.status.toLowerCase()}`}>
                                        {session.status}
                                    </span>
                                </div>
                                <div class="session-details">
                                    {session.zoomLink && (
                                        <a href={session.zoomLink} target="_blank" class="detail-item zoom-link">
                                            <svg
                                                xmlns="http://www.w3.org/2000/svg"
                                                width="16"
                                                height="16"
                                                viewBox="0 0 24 24"
                                                fill="none"
                                                stroke="currentColor"
                                                stroke-width="2"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                            >
                                                <polygon points="23 7 16 12 23 17 23 7" />
                                                <rect x="1" y="5" width="15" height="14" rx="2" ry="2" />
                                            </svg>
                                            Zoom Link
                                        </a>
                                    )}
                                    <span class="detail-item">
                                        <svg
                                            xmlns="http://www.w3.org/2000/svg"
                                            width="16"
                                            height="16"
                                            viewBox="0 0 24 24"
                                            fill="none"
                                            stroke="currentColor"
                                            stroke-width="2"
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                        >
                                            <circle cx="12" cy="12" r="10" />
                                            <polyline points="12 6 12 12 16 14" />
                                        </svg>
                                        {session.time}
                                    </span>
                                </div>
                                <p class="notes">{session.details}</p>
                            </div>
                            <div class="session-actions">
                                {session.isHost && (
                                    <Button size="sm" variant="outline" href={`/session/${session.id}/edit`}>
                                        Edit
                                    </Button>
                                )}
                                <Button size="sm" variant="ghost" class="text-danger btn-cancel-session" data-id={session.id} data-is-host={session.isHost.toString()}>
                                    {session.isHost ? "Cancel" : "Leave"}
                                </Button>
                            </div>
                        </div>
                    ))}
                    {mySessions.length === 0 && (
                        <div class="empty-state">
                            <p>You haven't created any sessions yet.</p>
                        </div>
                    )}
                </div>
            </Card>
        </section>

        {messages.length > 0 && (
            <section class="reviews-section">
                <div class="section-header">
                    <h2>Messages</h2>
                </div>
                
                <div class="reviews-grid">
                    {messages.map((message) => (
                        <Card class="review-card message-card">
                            <div class="review-header">
                                <div class="reviewer-info">
                                    <img 
                                        src={message.sender.profile?.avatarUrl || "https://ui-avatars.com/api/?name=" + message.sender.handle} 
                                        alt={message.sender.profile?.displayName} 
                                        class="avatar" 
                                    />
                                    <div>
                                        <span class="name">{message.sender.profile?.displayName || message.sender.handle}</span>
                                        <div class="meta-info">
                                            <span>Message</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="review-date">
                                    {message.createdAt.toLocaleDateString()}
                                    <button class="btn-delete-message" data-id={message.id} aria-label="Delete message">
                                        <iconify-icon icon="material-symbols:close" width="16" height="16"></iconify-icon>
                                    </button>
                                </div>
                            </div>
                            
                            <div class="review-content">
                                <p>"{message.content}"</p>
                            </div>

                            {message.sessionName && (
                                <div class="review-footer">
                                    <small> regarding: {message.sessionName}</small>
                                </div>
                            )}
                        </Card>
                    ))}
                </div>
            </section>
        )}

        {reviews.length > 0 && (
            <section class="reviews-section">
                <div class="section-header">
                    <h2>Student Ratings</h2>
                </div>
                
                <div class="reviews-grid">
                    {reviews.map((review) => (
                        <Card class="review-card">
                            <div class="review-header">
                                <div class="reviewer-info">
                                    <img 
                                        src={review.author.profile?.avatarUrl || "https://ui-avatars.com/api/?name=" + review.author.handle} 
                                        alt={review.author.profile?.displayName} 
                                        class="avatar" 
                                    />
                                    <div>
                                        <span class="name">{review.author.profile?.displayName || review.author.handle}</span>
                                        <div class="stars">
                                            {Array.from({ length: 5 }).map((_, i) => (
                                                <iconify-icon 
                                                    icon={i < review.rating ? "material-symbols:star" : "material-symbols:star-outline"} 
                                                    style={{ color: "var(--base-yellow)" }}
                                                />
                                            ))}
                                        </div>
                                    </div>
                                </div>
                                <div class="review-date">
                                    {review.createdAt.toLocaleDateString()}
                                    <button class="btn-delete-review" data-id={review.id} aria-label="Hide rating" title="Hide this rating">
                                        <iconify-icon icon="material-symbols:visibility-off-outline" width="16" height="16"></iconify-icon>
                                    </button>
                                </div>
                            </div>
                            
                            <div class="review-content">
                                <p>"{review.comment}"</p>
                            </div>

                            {review.session && (
                                <div class="review-footer">
                                    <small>Session: {review.session.name}</small>
                                </div>
                            )}
                        </Card>
                    ))}
                </div>
            </section>
        )}

        <section class="discover-section">
            <div class="section-header">
                <h2>Discover New Skills</h2>
            </div>

            <Card class="search-card">
                <SearchBar placeholder="Find a skill (e.g., 'Guitar', 'Python', 'Cooking')...">
                    <div class="vertical-divider"></div>
                    <Button variant="primary">Search</Button>
                </SearchBar>
            </Card>

            <div class="discover-layout" id="discover-layout">
                <div class="filler-content">
                    <div class="ideas-section">
                        <h3>Need Some Ideas?</h3>
                        <div class="categories-grid">
                            {suggestedTopics.map(topic => (
                                <Card class="category-card">
                                    <span class="icon">{topic.icon}</span>
                                    <h3>{topic.title}</h3>
                                    <p>{topic.description}</p>
                                </Card>
                            ))}
                        </div>
                    </div>

                    <div class="promo-banner">
                        <div class="banner-content">
                            <h3>Ready to share your skills?</h3>
                            <p>Create a session today and start teaching your passion to others in the community.</p>
                        </div>
                        <Button href="/session/create" variant="primary">Start Teaching</Button>
                    </div>
                </div>
            </div>
        </section>
    </div>
</Layout>

