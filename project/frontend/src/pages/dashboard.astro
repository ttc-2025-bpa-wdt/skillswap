import Layout from "@layouts/global.astro";
import Button from "@components/base/Button.svelte";
import Card from "@components/base/Card.svelte";
import SessionCard from "@components/cards/SessionCard.svelte";
import SearchBar from "@components/base/SearchBar.svelte";

import { Authentication } from "shared/models";
import { db } from "shared/helpers";

const token = Authentication.validateToken(Astro.request);
if (!token) return Astro.redirect("/auth/login");

const sessions = await db.session.findMany({
    where: {
        OR: [
            { userId: token.sub },
            { registrations: { some: { userId: token.sub } } }
        ]
    },
    orderBy: { eventDate: 'asc' }
});

const mySessions = sessions.map(s => ({
    id: s.id,
    title: s.name,
    zoomLink: s.meetingUrl || "",
    time: s.eventDate.toLocaleString('en-US', { weekday: 'short', month: 'short', day: 'numeric', hour: 'numeric', minute: 'numeric' }),
    status: s.eventDate > new Date() ? "Upcoming" : "Past",
    details: s.description || "",
    isHost: s.userId === token.sub
}));

const reviews = await db.review.findMany({
    where: { 
        recipientId: token.sub,
        rating: { gt: 0 }
    },
    include: {
        author: {
            include: {
                profile: true
            }
        },
        session: true
    },
    orderBy: { createdAt: 'desc' }
});

const messages = await db.message.findMany({
    where: {
        recipientId: token.sub
    },
    include: {
        sender: {
            include: {
                profile: true
            }
        }
    },
    orderBy: { createdAt: 'desc' }
});

