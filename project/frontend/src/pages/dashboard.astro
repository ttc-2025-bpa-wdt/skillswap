<script>
    const cancelButtons = document.querySelectorAll('.btn-cancel-session');

    cancelButtons.forEach(button => {
        button.addEventListener('click', async (e) => {
            const buttonEl = e.currentTarget as HTMLButtonElement;
            const sessionId = buttonEl.getAttribute('data-id');
            const isHost = buttonEl.getAttribute('data-is-host') === 'true';

            const confirmMsg = isHost 
                ? 'Are you sure you want to cancel this session? This action cannot be undone.'
                : 'Are you sure you want to leave this session?';

            if (!confirm(confirmMsg)) {
                return;
            }

            try {
                const url = isHost ? '/api/v1/session' : '/api/v1/session/register';
                // Host deletes via { id }, student unregisters via { sessionId }
                const body = isHost ? { id: sessionId } : { sessionId: sessionId };

                const response = await fetch(url, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(body)
                });

                if (response.ok) {
                    window.location.reload();
                } else {
                    const data = await response.json();
                    alert(data.error || (isHost ? 'Failed to cancel session' : 'Failed to leave session'));
                }
            } catch (error) {
                console.error('Error processing request:', error);
                alert('An error occurred');
            }
        });
    });

    const deleteReviewButtons = document.querySelectorAll('.btn-delete-review');

    deleteReviewButtons.forEach(button => {
        button.addEventListener('click', async (e) => {
            if (!confirm('Hide this rating from your dashboard?')) {
                return;
            }

            const buttonEl = e.currentTarget as HTMLButtonElement;
            const reviewId = buttonEl.getAttribute('data-id');

            try {
                const response = await fetch('/api/v1/session/rate', {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ id: reviewId })
                });

                if (response.ok) {
                    // Start closing animation
                    const card = buttonEl.closest('.review-card') as HTMLElement;
                    if (card) {
                        card.style.transition = 'all 0.3s ease';
                        card.style.opacity = '0';
                        card.style.transform = 'scale(0.95)';
                        setTimeout(() => card.remove(), 300);
                    } else {
                        window.location.reload();
                    }
                } else {
                    console.error('Failed to delete review');
                    alert('Could not delete review');
                }
            } catch (error) {
                console.error('Error deleting review:', error);
                alert('An error occurred');
            }
        });
    });

    const deleteMessageButtons = document.querySelectorAll('.btn-delete-message');

    deleteMessageButtons.forEach(button => {
        button.addEventListener('click', async (e) => {
            if (!confirm('Delete this message?')) {
                return;
            }

            const buttonEl = e.currentTarget as HTMLButtonElement;
            const messageId = buttonEl.getAttribute('data-id');

            try {
                const response = await fetch('/api/v1/message', {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ id: messageId })
                });

                if (response.ok) {
                    const card = buttonEl.closest('.review-card') as HTMLElement;
                   if (card) {
                        card.style.transition = 'all 0.3s ease';
                        card.style.opacity = '0';
                        card.style.transform = 'scale(0.95)';
                        setTimeout(() => card.remove(), 300);
                    } else {
                        window.location.reload();
                    }
                } else {
                    const data = await response.json();
                    alert(data.error || 'Failed to delete message');
                }
            } catch (error) {
                console.error('Error deleting message:', error);
                alert('An error occurred');
            }
        });
    });
</script>
