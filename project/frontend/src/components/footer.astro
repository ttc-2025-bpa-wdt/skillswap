---
import { SITE_TITLE } from "@consts";

import { Icon } from "astro-icon/components";
---

<footer>
    <div class="footer-content">
        <div class="footer-section">
            <h3>{SITE_TITLE}</h3>
            <p>Learn. Teach. Connect.</p>
        </div>
        <div class="footer-section">
            <h4>Links</h4>
            <a href="/contact">Contact Us</a>
            <a href="/privacy">Privacy Policy</a>
            <a href="/terms">Terms of Use</a>
        </div>
        <div class="footer-section">
            <h4>Follow Us</h4>
            <div class="socials">
                <a href="#" aria-label="Twitter"><Icon name="fa7-brands:x-twitter" size={24} /></a>
                <a href="#" aria-label="Facebook"><Icon name="fa7-brands:facebook" size={24} /></a>
                <a href="#" aria-label="Instagram"><Icon name="fa7-brands:instagram" size={24} /></a>
                <a href="#" aria-label="LinkedIn"><Icon name="fa7-brands:linkedin" size={24} /></a>
            </div>
        </div>
    </div>
    <div class="copyright">
        <p>&copy; {new Date().getFullYear()} {SITE_TITLE}. All rights reserved.</p>
    </div>
</footer>

<style lang="scss">
    footer {
        width: 100%;
        background-color: var(--background);
        border-top: 1px solid var(--accent-3); /* Fallback/Simpler color */
        padding: 4rem 2rem 2rem;
        margin-top: auto; /* Push to bottom if flex column parent */
        box-sizing: border-box;
    }

    .footer-content {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        max-width: 1200px;
        margin: 0 auto;
        gap: 3rem;
        text-align: left; /* Ensure left alignment */
    }

    .footer-section {
        flex: 1 1 250px; /* Allow growing and shrinking, base width 250px */
        min-width: 200px;

        h3 {
            color: var(--accent-1);
            margin-top: 0;
            font-size: 1.5rem;
            margin-bottom: 1rem;
        }

        h4 {
            margin-top: 0;
            margin-bottom: 1.2rem;
            color: var(--foreground);
            font-size: 1.1rem;
            font-weight: 600;
        }

        a {
            display: block;
            text-decoration: none;
            color: var(--foreground);
            opacity: 0.8;
            margin-bottom: 0.8rem;
            transition: all 0.2s ease;

            &:hover {
                opacity: 1;
                color: var(--accent-1);
                transform: translateX(5px);
            }
        }
        
        p {
            line-height: 1.6;
            opacity: 0.9;
        }
    }

    .socials {
        display: flex;
        gap: 1.5rem;
        margin-top: 1rem;

        a {
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: color-mix(in srgb, var(--accent-3), transparent 80%);
            transition: all 0.3s ease;

            &:hover {
                background-color: var(--accent-1);
                color: white;
                transform: translateY(-3px);
            }
        }
    }

    .copyright {
        text-align: center;
        margin-top: 4rem;
        padding-top: 2rem;
        border-top: 1px solid color-mix(in srgb, var(--foreground), transparent 90%);
        opacity: 0.7;
        font-size: 0.9rem;
    }
</style>