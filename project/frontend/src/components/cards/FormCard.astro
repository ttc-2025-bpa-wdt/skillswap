---
import Card from "@components/base/Card.astro";

interface Props {
    class?: string;
    [key: string]: any;
}

const { class: className, ...rest } = Astro.props;
---

<Card class:list={["form-card", className]} {...rest}>
    <slot />
</Card>

<style lang="scss" is:global>
    .form-group {
        label {
            display: block;
            font-family: "Montserrat", sans-serif;
            font-size: 0.9rem;
            font-weight: 600;
            color: var(--foreground);
            margin-bottom: 0.5rem;
        }

        input {
            width: 100%;
            padding: 0.75rem 1rem;
            color: var(--foreground);
            font-size: 1rem;

            &.error {
                border-color: var(--base-red);
            }
        }

        .error-message {
            display: block;
            color: var(--base-red);
            font-size: 0.85rem;
            margin-top: 0.25rem;
            min-height: 1.2em;
        }
    }

    .form-options {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
        font-size: 0.9rem;

        .checkbox-container {
            display: flex;
            align-items: center;
            cursor: pointer;
            color: var(--foreground);
            user-select: none;

            input {
                margin-right: 0.5rem;
                accent-color: var(--accent-1);
                width: 16px;
                height: 16px;
            }
        }
    }
</style>
