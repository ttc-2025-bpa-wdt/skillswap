---
import type { ISession } from "shared/schema";
import Card from "@components/base/Card.astro";
import { Profile, ProfileFilter, User, UserFilter } from "shared/models";
import Tag from "@components/base/Tag.astro";

interface Props {
    payload: ISession;
    redirects?: boolean;
}

const { redirects = true } = Astro.props;
const { id, name, userId, difficulty, categories, prereqs, createdAt, eventDate } = Astro.props.payload;

function formatDateShort(dateStr: string) {
    const d = new Date(dateStr);
    return d.toISOString().split('T')[0];
}

const sessionOwner = await User.read(userId, UserFilter.Id);
const ownerProfile = await Profile.read(sessionOwner.profileId, ProfileFilter.Id);

---

<Card class="skill-card-horizontal" href={redirects ? `/session/${id}` : undefined}>
    <div class="instructor-pane">
        <img src={ownerProfile?.avatarUrl} alt={ownerProfile?.displayName} class="avatar" />
    </div>
    
    <div class="separator"></div>
    
    <div class="skill-content">
        <div class="skill-header">
            <div class="skill-row">
                <h3 class="skill-title">{name}</h3>
                {
                    /* truncate to two entries */
                    categories.slice(0, 2).map(name => <Tag class="skill-tag" payload={{ name, color: "var(--background)" }} />)
                }
            </div>
            <div class="instructor-row">
                <span class="instructor-name">by {ownerProfile.displayName}</span>
                <span class="rating-tag"><span class="star">â˜…</span>{ownerProfile.stats.rating.toFixed(1)}</span>
            </div>
        </div>
        
        <div class="skill-meta">
            <div class="meta-item meta-difficulty">
                    <span class="label">
                        <span class="text-long">Difficulty</span>
                        <span class="text-short">Diff</span>
                    </span>
                    <span class={`badge ${difficulty.toLowerCase()}`}>{difficulty}</span>
            </div>
            <div class="meta-item meta-prereqs">
                    <span class="label">
                        <span class="text-long">Prereqs</span>
                        <span class="text-short">Pre</span>
                    </span>
                    <span class="value text-truncate">{prereqs}</span>
            </div>
            <div class="meta-item meta-created">
                    <span class="label">
                        <span class="text-long">Created</span>
                        <span class="text-short">Made</span>
                    </span>
                    <span class="value">
                        <span class="text-long">{createdAt.toISOString().split('T')[0]}</span>
                        <span class="text-short">{formatDateShort(createdAt.toISOString())}</span>
                    </span>
            </div>
            {eventDate && (
            <div class="meta-item meta-event">
                <span class="label">
                    <span class="text-long">Event</span>
                    <span class="text-short">At</span>
                </span>
                <span class="value">
                    <span class="text-long">{eventDate.toISOString().split('T')[0]}</span>
                    <span class="text-short">{formatDateShort(eventDate.toISOString())}</span>
                </span>
            </div>
            )}
        </div>
    </div>
</Card>

<style lang="scss">
    .skill-card-horizontal {
        display: flex;
        align-items: center;
        flex-direction: row;
        padding: 1rem;
        gap: 1rem;
        cursor: pointer;
        transition: transform 0.2s ease, box-shadow 0.2s ease;

        &:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        
        @media (max-width: 600px) {
            display: grid;
            grid-template-areas: 
                "avatar header"
                "meta meta";
            grid-template-columns: auto 1fr;
            align-items: center;
            gap: 0.75rem;
            
            .separator { display: none; }
        }
    }

    @media (max-width: 600px) {
        :global(.skill-tag) {
            display: none !important;
        }

        h3 {
            font-size: 1rem !important;
        }
    }

    .instructor-pane {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        
        @media (max-width: 600px) {
            grid-area: avatar;
            width: auto;
            margin-bottom: 0;
            padding-right: 0.5rem;
        }

        .avatar {
            width: 56px;
            height: 56px;
            border-radius: 50%;
            object-fit: cover;
            background: linear-gradient(135deg, var(--accent-1), var(--accent-2));
            /* Removed mobile resizing */
        }
    }

    .separator {
        width: 1px;
        min-height: 60px;
        align-self: stretch;
        background-color: var(--accent-3);
        opacity: 0.5;
    }

    .skill-row {
        display: flex;
        align-items: center;
        gap: 0.72rem;
    }

    .skill-content {
        flex: 1;
        
        @media (max-width: 600px) {
            display: contents; /* grid participation */
        }

        .skill-header {
             @media (max-width: 600px) {
                grid-area: header;
                display: flex;
                flex-direction: column;
                justify-content: center;
             }
        }

        .skill-title {
            font-family: 'Montserrat', sans-serif;
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 0.1rem;
            color: var(--foreground);
        }

        .instructor-row {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-bottom: 0.75rem;

            .instructor-name {
                font-size: 0.9rem;
                color: var(--foreground);
                opacity: 0.6;
                margin: 0;
            }

            .rating-tag {
                display: inline-flex;
                align-items: center;
                gap: 0.25rem;
                background-color: transparent;
                border: 1px solid var(--accent-3);
                color: var(--text-muted);
                padding: 0.15rem 0.5rem;
                border-radius: 12px;
                font-size: 0.75rem;
                font-weight: 600;
                line-height: 1;
                
                .star {
                    color: #f1c40f;
                    font-size: 0.8rem;
                }
            }
        }

        .skill-meta {
            display: flex;
            flex-wrap: wrap;
            gap: 1.5rem;
            font-size: 0.85rem;
            width: 100%;
            margin-top: 1rem;
            
            @media (max-width: 600px) {
                grid-area: meta;
                flex-direction: row;
                gap: 0.5rem;
                margin-top: 0;
                justify-content: space-between;
            }

            .meta-item {
                display: flex;
                flex-direction: column;
                align-items: flex-start;
                gap: 0.35rem;

                @media (max-width: 600px) {
                    &.meta-difficulty { order: 1; }
                    &.meta-created { order: 2; }
                    &.meta-event { order: 3; }
                    &.meta-prereqs { 
                        order: 4; 
                        width: 100%;
                    }
                }
                
                .label {
                    font-size: 0.75rem;
                    text-transform: uppercase;
                    letter-spacing: 0.5px;
                    opacity: 0.6;
                    font-weight: 600;
                }

                .value {
                    font-weight: 500;
                    color: var(--foreground);
                }
            }
        }
    }

    .badge {
        padding: 0.15rem 0.5rem;
        border-radius: 4px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        white-space: nowrap;

        &.beginner { background-color: rgba(46, 204, 113, 0.15); color: #2ecc71; }
        &.intermediate { background-color: rgba(241, 196, 15, 0.15); color: #d4ac0d; }
        &.advanced { background-color: rgba(231, 76, 60, 0.15); color: #e74c3c; }
    }


    /* Flyout/Compact Logic */
    .text-short { display: none; }
    
    .text-truncate {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 100%;
        display: block;
    }

    :global(.discover-layout.details-open) {
        
        .skill-meta {
            /* Compress grid when open */
            gap: 0.5rem;
            margin-top: 0.5rem;
        }
        
        .meta-item {
            flex-direction: row;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.8rem;
            
            /* Separator logic */
            .label::after {
                content: "|";
                margin-left: 0.5rem;
                opacity: 0.5;
            }
        }

        /* Toggle visibility classes */
        .text-long { display: none; }
        .text-short { display: inline; }

        .badge {
            transform: scale(0.9);
            transform-origin: left;
        }

        .separator {
            display: none;
        }
    }
</style>