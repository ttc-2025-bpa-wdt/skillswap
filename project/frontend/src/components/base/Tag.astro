---
import type { ITag } from 'shared/schema';

interface Props {
    payload: Partial<ITag>;
}

const { name = null, color = "var(--accent-1)" } = Astro.props.payload;
---

<span class="tag" style={`background-color: ${color};`}>
    {name ?? <slot />}
</span>

<style lang="scss">
    .tag {
        text-transform: uppercase;
        font-size: 0.75rem;
        font-weight: 700;
        padding: 0.25rem 0.75rem;
        border-radius: 50px;
    }
</style>