---
import Layout from "@layouts/global.astro";
import FormCard from "@components/cards/FormCard.astro";

interface Props {
    title: string;
    header: string;
    subheader: string;
    error?: string;
}

const { title, header, subheader, error } = Astro.props;
---

<Layout title={title}>
    <div class="auth-container">
        <FormCard class="auth-card">
            <h1>{header}</h1>
            <p>{subheader}</p>
            {error && <div class="auth-banner">{error}</div>}
            <slot />
        </FormCard>
    </div>
</Layout>

<style lang="scss">
    .auth-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: calc(100vh - 4rem);
        padding: 2rem;
        background-color: var(--background);
    }

    .auth-card {
        padding: 2.5rem;
        width: 100%;
        max-width: 450px;
    }

    @media (max-width: 600px) {
        .auth-card {
            padding: 1.5rem;
        }
    }

    .auth-banner {
        background-color: color-mix(in srgb, var(--base-red), white 90%);
        border: 1px solid var(--base-red);
        color: var(--base-red);
        padding: 0.75rem;
        border-radius: 4px;
        margin-bottom: 1.5rem;
        font-size: 0.9rem;
        text-align: center;
    }
</style>
